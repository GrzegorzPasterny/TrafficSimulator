<Window x:Class="TrafficSimulator.Presentation.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficSimulator.Presentation.WPF.Views"
        mc:Ignorable="d"
        Title="Traffic Simulator" Height="950" Width="Auto">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons and Step Counter -->
            <RowDefinition Height="Auto"/>
            <!-- Simulation Canvas and Results -->
            <RowDefinition Height="620"/>
            <!--Logs-->
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Traffic Simulator" 
               VerticalAlignment="Top" 
               HorizontalAlignment="Center" 
               FontSize="24" 
               Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Load Simulation" 
                Command="{Binding LoadSimulationCommand}" 
                Width="150" Margin="10"
                Grid.Column="0"/>

            <Button Content="Start Simulation" 
                Command="{Binding StartSimulationCommand}" 
                Width="150" Margin="10"
                Grid.Column="1"/>

            <TextBlock Text="Current step:" 
                   FontSize="18" 
                   VerticalAlignment="Center" 
                   Margin="10"
                   Grid.Column="2"/>

            <TextBlock Text="{Binding SimulationStepCounter}" 
                   FontSize="18" 
                   VerticalAlignment="Center" 
                   Margin="10"
                   Grid.Column="3"/>
        </Grid>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Canvas Name="SimulationCanvas" 
                Width="600" 
                Height="600" 
                Background="LightGray"
                Grid.Column="0"/>

            <Grid Grid.Column="1" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Results" 
                           FontSize="18" 
                           HorizontalAlignment="Center"
                           Grid.Row="0"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Steps taken:" 
                                   FontSize="18" 
                                   VerticalAlignment="Center" 
                                   Margin="10"
                                   Grid.Row="0"/>
                        <TextBlock Text="CarsPassed:"  
                                   FontSize="18" 
                                   VerticalAlignment="Center" 
                                   Margin="10"
                                   Grid.Row="1"/>
                        <TextBlock Text="TotalCarsIdleTimeMs:" 
                                   FontSize="18" 
                                   VerticalAlignment="Center" 
                                   Margin="10"
                                   Grid.Row="2"/>
                        <TextBlock Text="TimeTakenSeconds:" 
                                   FontSize="18" 
                                   VerticalAlignment="Center" 
                                   Margin="10"
                                   Grid.Row="3"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding StepsTaken}" 
                                   FontSize="18" 
                                   VerticalAlignment="Center" 
                                   Margin="10"
                                   Grid.Row="0"/>
                        <TextBlock Text="{Binding CarsPassed}" 
                                   FontSize="18" 
                                   VerticalAlignment="Center" 
                                   Margin="10"
                                   Grid.Row="1"/>
                        <TextBlock Text="{Binding TotalCarsIdleTimeMs}" 
                                   FontSize="18" 
                                   VerticalAlignment="Center" 
                                   Margin="10"
                                   Grid.Row="2"/>
                        <TextBlock Text="{Binding TimeTakenSeconds}" 
                                   FontSize="18" 
                                   VerticalAlignment="Center" 
                                   Margin="10"
                                   Grid.Row="3"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="3" Margin="10">
            <DataGrid Name="LogDataGrid" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Height="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="150"/>
                    <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80"/>
                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
