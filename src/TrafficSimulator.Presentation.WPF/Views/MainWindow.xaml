<Window x:Class="TrafficSimulator.Presentation.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficSimulator.Presentation.WPF.Views"
        mc:Ignorable="d"
        Title="Traffic Simulator" Height="700" Width="630">
    <Grid>
        <StackPanel>
            <TextBlock Text="Traffic Simulator"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       FontSize="24"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Load Simulation" Command="{Binding LoadSimulationCommand}" Width="150" Margin="10"/>
                <Button Content="Start Simulation" Command="{Binding StartSimulationCommand}" Width="150" Margin="10"/>
                <TextBlock Text="Step:" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding SimulationStepCounter}" 
                   FontSize="18" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
            </StackPanel>
            <Canvas Name="SimulationCanvas" Width="600" Height="600" Background="LightGray">
            </Canvas>
        </StackPanel>
    </Grid>
</Window>
