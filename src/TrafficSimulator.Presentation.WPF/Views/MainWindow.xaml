<Window x:Class="TrafficSimulator.Presentation.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficSimulator.Presentation.WPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="715" Width="630">
    <Grid>
        <StackPanel>
            <TextBlock Text="Traffic Simulator"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       FontSize="24"/>
            <Button Content="Load Simulation" Command="{Binding LoadSimulationCommand}" Width="200" Margin="10" HorizontalAlignment="Left"/>

            <Canvas Name="SimulationCanvas" Width="600" Height="600" Background="LightGray">
                <ItemsControl ItemsSource="{Binding IntersectionElements}"/>
            </Canvas>
        </StackPanel>
    </Grid>
</Window>
